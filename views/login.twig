<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="{{ app.request.basepath }}/views/style.css" 
          rel="stylesheet" media="all" />
    <title>IsiInstaPaper - Connection</title>
</head>
<body>
    <header>
        <h1>IsiInstaPaper</h1>
    </header>
	
    <div class="form">
    <form method="post" id="signin">
        <fieldset>
            <legend>Sign in</legend>
            <label for="email_signin">Email</label>
            <input type="email" name="email_signin" id="email_signin" />
            <label for="pwd_signin">Password</label>
            <input type="password" name="pwd_signin" id="pwd_signin" />
        </fieldset>
    </form>
    <button type="submit" form="signin" value="Sign in">Sign in</button>
    </div>
    
    <div class="form">
    <form method="post" id="signup">
       <fieldset>
            <legend>Sign up</legend>
            <label for="email_signup">Email</label>
            <input type="email" name="email_signup" id="email_signup" />
            <label for="pwd_signup">Password</label>
            <input type="password" name="pwd_signup" id="pwd_signup" />
        </fieldset>
    </form>
    <button type="submit" form="signup" value="Sign up">Sign up</button> 
    </div>
    
</body>
</html>